<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commute App" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Buttons Row -->
            <RowDefinition Height="*"/>
            <!-- Train Times -->
            <RowDefinition Height="*"/>
            <!-- Bike Availability -->
            <RowDefinition Height="Auto"/>
            <!-- Overall Status -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Refresh Data" Command="{Binding RefreshDataCommand}" Width="100" Margin="10,0"/>
        </StackPanel>

        <GroupBox Header="Train Times" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding TrainTimes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Bike Availability" Grid.Row="2" Margin="0,0,0,10">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Bikes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding BikeType}" Margin="0,0,10,0"/>
                                <TextBlock Text="Available: " />
                                <TextBlock Text="{Binding Quantity}" Margin="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Overall Status" Grid.Row="3" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="{Binding OverallStatus}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
